issn = {0027-8424},
journal = {Proceedings of the National Academy of Sciences},
month = {dec},
number = {48},
pages = {20515--20519},
pmid = {19918082},
title = {{The antioxidant role of thiocyanate in the pathogenesis of cystic fibrosis and other inflammation-related diseases}},
