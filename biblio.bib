title = {{{\textless}i{\textgreater}Staphylococcus aureus{\textless}/i{\textgreater} Adenosine Inhibits sPLA2-IIA–Mediated Host Killing in the Airways}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/25904549 http://www.jimmunol.org/lookup/doi/10.4049/jimmunol.1402665},
